@model eRecarga.Models.ManageIBANViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Gerir IBAN";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeIBAN", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.IBAN, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.IBAN, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Alterar IBAN" class="btn btn-default" />
        </div>
    </div>
}

