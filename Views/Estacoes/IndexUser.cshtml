@model IEnumerable<eRecarga.Models.Estacao>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de estações</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Distrito.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraAbertura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraFecho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Distrito.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoraAbertura)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoraFecho)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Longitude)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Latitude)
    </td>
    <td>
        @Html.ActionLink("Detalhes", "DetailsUser", new { id = item.Id })
    </td>

</tr>
}

</table>
