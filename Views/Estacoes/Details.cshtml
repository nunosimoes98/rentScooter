        </dd>

    </dl>
</div>

<h3>Postos</h3>

<p>
    @Html.ActionLink("Criar Novo Posto", "CreateComEstacao", "Postos", new { estacaoId = Model.Id }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Postos)
        </th>
        <th></th>
    </tr>

    @foreach (var posto in Model.Postos)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => posto.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Postos", new { id = posto.Id, estacaoId = Model.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Postos", new { id = posto.Id, estacaoId = Model.Id }, null)
            </td>
        </tr>
    }

</table>

<h3>Preços</h3>
<p>
    @Html.ActionLink("Criar Novo Preço", "Create", "Precos", new { estacaoId = Model.Id } ,null)
</p>
<table class="table">
    <tr>
        <th>
            Horas
        </th>
        <th>
            Valor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Precos)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.HoraInicio) - @Html.DisplayFor(modelItem => item.HoraFim)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", "Precos", new { id = item.Id }, null) |
        @Html.ActionLink("Delete", "Delete", "Precos", new { id = item.Id }, null)
    </td>
</tr>
    }

</table>



