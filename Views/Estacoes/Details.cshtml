    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Estacao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Distrito.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Distrito.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraAbertura)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraAbertura)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraFecho)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraFecho)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>

