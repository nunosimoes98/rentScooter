@model IEnumerable<eRecarga.Models.Reserva>

@{
    ViewBag.Title = "Escolha Estação";
}

<h2>Escolha uma estação do Distrito @ViewBag.Distrito.Nome</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Estação", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EstacaoId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Data", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Data", "DateTime", new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Selecionar" class="btn btn-default" />
            </div>
        </div>
    </div>
 }




        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script>
                $(document).ready(function () {
                    $("#Data").datepicker({
                        dateFormat: "yy/mm/dd"
                    });
                });
            </script>
        }
